<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.RssReader.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fitsSystemWindows">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:statusBarColor">#1f000000</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowAnimationStyle">@style/Animation.RssReader.SliderRight</item>
    </style>

    <style name="Theme.RssReader.Article" parent="Theme.RssReader.Light">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowAnimationStyle">@style/Animation.RssReader.SliderDown</item>
    </style>
    
    <style name="Animation.RssReader.SliderRight" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/anim_slide_right_1</item>
        <item name="android:activityOpenExitAnimation">@anim/anim_slide_right_2</item>
        <item name="android:activityCloseEnterAnimation">@anim/anim_slide_right_3</item>
        <item name="android:activityCloseExitAnimation">@anim/anim_slide_right_4</item>
    </style>

    <style name="Animation.RssReader.SliderDown" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/anim_slide_down_1</item>
        <item name="android:activityOpenExitAnimation">@anim/anim_empty</item>
        <item name="android:activityCloseEnterAnimation">@anim/anim_empty</item>
        <item name="android:activityCloseExitAnimation">@anim/anim_slide_down_4</item>
    </style>

</resources>
